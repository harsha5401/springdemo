         <scope>test</scope>
	</dependency> 
   	 
 </dependencies>
	
  <reporting>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-project-info-reports-plugin</artifactId>
        <version>2.6</version>
      </plugin>
    </plugins>
  </reporting>
	
 <distributionManagement>
    <repository>
        <id>central</id>
        <name>DevCloudArtifactory-releases</name>
        <url>https://artifactory.dxc.com/artifactory/platformdxc-maven</url>
    </repository>
